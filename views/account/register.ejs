<h1><%= title %></h1>

<form action="/account/register" method="post" class="login">
    
    <div>
        <label for="account_firstname">First Name<abbr class="req" title="required"> *</abbr></label>
        <input name="account_firstname" id="account_firstname" type="text" required placeholder="Enter your first name" value="<%= locals.account_firstname %>">
    </div>
    
    <div>
        <label for="account_lastname">Last Name<abbr class="req" title="required"> *</abbr></label>
        <input name="account_lastname" id="account_lastname" type="text" required placeholder="Enter your last name" value="<%= locals.account_lastname %>">
    </div>

    <div>
        <label for="account_email">Email<abbr class="req" title="required"> *</abbr></label>
        <input name="account_email" id="account_email" type="email" required placeholder="Enter your email" value="<%= locals.account_email %>">
    </div>
    
    <div>
        <label for="account_password">Password<abbr class="req" title="required"> *</abbr></label>
        <input name="account_password" id="account_password" type="password" placeholder="Enter your password" 
            required minlength="12"
            pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).{12,}$">
        <p class="hint">Must be at least 12 characters, include 1 uppercase, 1 number, and 1 special character.</p>
    </div>

    <%- messages() %>
    <% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>

    <input type="submit" value="Register">

    <p>Already have an account? <a href="/account/login">Login</a></p>
</form>