<h1><%= title %></h1>

<%- messages() %>
<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<h2>Welcome <%= locals.accountData.account_firstname %>!</h2>
<h3>Account Management</h3>
<p><a title="Account Management" href="/account/update/<%= locals.accountData.account_id%>">Account Management</a></p>

<% if (locals.accountData.account_type == "Admin" || locals.accountData.account_type == "Employee") { %>
    <h3>Inventory Management</h3>
    <p><a title="Inventory Management" href="/inv/">Inventory Management</a></p>
<% } %>