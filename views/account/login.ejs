<h1><%= title %></h1>
<% //let errors = "ERROR TEST" %>
<form action="/account/login" method="post" class="login" id="loginForm">

    <div>
        <label for="account_email">Email<abbr class="req" title="required"> *</abbr></label>
        <input name="account_email" id="account_email" type="email" required placeholder="Enter your email" value="<%= locals.account_email %>">
    </div>
    
    <div>
        <label for="account_password">Password<abbr class="req" title="required"> *</abbr></label>
        <input name="account_password" id="account_password" type="password" required placeholder="Enter your password" >

    </div>

    <%- messages() %>
    <% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>

    <input type="submit" value="Sign In">

    <p>No account? <a href="/account/register">Sign up!</a></p>
</form>