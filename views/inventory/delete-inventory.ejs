<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<div class="mgt-delete-inventory">
    <form action="/inv/delete" method="post">

        <h3>Are you sure you want to delete this vehicle?</h3>

        <img src="<%= locals.inv_image %>" alt="Vehicle picture">

        <label for="inv_make">Make: </label>
        <input disabled type="text" required name="inv_make" id="inv_make" value="<%= locals.inv_make %>">

        <label for="inv_model">Model: </label>
        <input disabled type="text" required name="inv_model" id="inv_model" value="<%= locals.inv_model %>">

        <label for="inv_year">Year: </label>
        <input disabled type="text" required name="inv_year" id="inv_year" pattern="[0-9]{4}" title="Year in 4 numbers format" value="<%= locals.inv_year %>" placeholder="4-digit year">

        <label for="inv_color">Color: </label>
        <input disabled type="text" required name="inv_color" id="inv_color" value="<%= locals.inv_color %>">
        
  
        <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>

        <input id="delete-button" type="submit" value="Delete" >

        <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
        </ul>
        <% } %>
    </form>
</div>
